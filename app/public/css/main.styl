@import 'normalize'
@import 'mixins'
@import 'helpers'

imageDir = "/img/"

backgroundColor = #FCFCFC
fontColor = #222
linkColor = #75C2E7

// :::::: Basic Layout ::::::

html, body
    height: 100%
    width: 100%

body
    padding:0.5em 0;
    font-size:18px;
    background: backgroundColor url( imageDir graveyard.svg ) no-repeat bottom center;
    background-size: contain
    color: fontColor;
    font-family: 'IM Fell English SC', serif;

header
    width:90%; margin: 1em auto 3em;

.branding
    display: inline-block; margin: 0;
    height: 40px; padding-right:38px;

    font-family: 'Noto Serif', serif;
    font-size: 22px; line-height:1.5em;
    font-style: italic;
    font-weight: normal; color: fontColor;
    
    background-image: url( imageDir ghost_mascot_small.png );
    background-repeat: no-repeat;
    background-position: right top;

    transition()

    &:hover
        color: lighten(fontColor, 40%)
        padding-right: 44px

.cssanimations
    .branding
        fadeIn()

.nav
    float:right;

.nav-user-icon
    height:30px; width:30px; margin: 5px 0 5px 5px;

footer
    width:100%
    position: fixed
    bottom:0px; left:0px;

.footer-nav
    list-style: none
    padding-left: 0
    text-align: center
    font-size:1.3em
    margin:0.3em auto 0.3em
    a
        color: #ddd
        &:hover
            color: #fff
    li
        display: inline
        margin:0 0.5em



// :::::: Generic Element Styles ::::::::
a
    color: linkColor
    text-decoration: none
    transition()
    &:hover
        color: darken(linkColor, 30%)

.button, button
    display: inline-block;
    padding:0.5em 1.0em;
    border-radius: 2px;
    cursor: pointer

.submit-button
    background-color: #333
    color:#fff
    border: none
    transition()
    &:hover
        background-color: #444

input[type="text"], 
input[type="password"], 
textarea
    padding:0.3em 0.5em
    min-width: 300px
    width: 80%
    font-size:1.3em
    background-color: #eee
    background-color: rgba(255,255,255,0.8)
    border: 1px solid #ddd
    border: 1px solid rgba(200,200,200,0.8)
    border-radius: 2px
    transition()

    &:focus
        border-color: #ccc
        outline: none



// :::::: Page Styles ::::::::::
    
.page-404
    text-align: center

.content
    text-align:center;


.joke-setup
    font-size: 1.8em

.joke-hidden
    opacity: 0.0;
    transition()
    &.show
        opacity: 1.0;


.joke-punchline
    font-size: 1.8em

.joke-author
    width: 40%
    margin: 0 auto;
    text-align: right

.show-punchline-button
    color:#666
    background-color: #E3E8EE
    &:hover
        color:#333
        background-color: darken(#E3E8EE, 2%)

.ghost-container
    width:290px; padding:300px 20px 0 90px;
    height:232px;
    margin: 0 auto;
    background-image: url( imageDir login_ghost_large.png );
    background-repeat: no-repeat;

    *:first-child
        margin-top:0;
    h2
        margin-bottom:2em;

.twitter-login-button
    twitterBlue = #4099ff
    background-color: twitterBlue
    color:#fff
    font-size:16px; line-height: 1.2em;
    &:hover
        color:#fff
        background-color: lighten(twitterBlue, 20%)

.submit-button-container
    margin-top:3em;
